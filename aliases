# Previous directories
alias pd='dirs -v'
function po() {
    local dir_num="$1"
    local target_dir=$(dirs -v | grep "^${dir_num}" | awk '{print $2}')
    if [ -n "$target_dir" ]; then
	target_dir="${target_dir/#\~/$HOME}"
        cd "$target_dir"
    else
        echo "Directory number not found."
    fi
}

# Starred directories
function sadd() {
    local star_file="$HOME/.stardirs"
    local current_dir=$(pwd)
    echo "$current_dir" >> "$star_file"
}

function sd() {
    local star_file="$HOME/.stardirs"
    if [ -f "$star_file" ]; then
        awk '{print NR-1 " " $0}' "$star_file"
    else
        echo "No starred directories found."
    fi
}

function so() {
    local dir_num="$1"
    local star_file="$HOME/.stardirs"
    if [ -f "$star_file" ]; then
        local target_dir=$(awk -v num="$dir_num" 'NR==num+1 {print}' "$star_file")
        if [ -n "$target_dir" ]; then
            cd "$target_dir"
        else
            echo "Directory number not found."
        fi
    else
        echo "No starred directories found."
    fi
}

